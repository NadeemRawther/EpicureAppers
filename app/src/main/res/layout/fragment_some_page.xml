<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="homeviewmodel" type="com.nads.epicureapp.ui.homepage.HomeViewModel"/>
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.homepage.profiledir.SomePage">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclemyrecipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="84dp" />

    <ProgressBar
        android:id="@+id/yourrecipprogress"
        style="?android:attr/progressBarStyle"
        android:layout_width="123dp"
        android:layout_height="126dp"
        android:indeterminate="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/recyclemyrecipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recyclemyrecipe" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>