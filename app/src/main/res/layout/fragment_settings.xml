<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="homeviewmodel" type="com.nads.epicureapp.ui.homepage.HomeViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/detailsprogressBareditdetails"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Edit Profile"
                        android:textAlignment="center"
                        android:textSize="24sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="5dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="Name"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editnamed"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_weight="2"
                        android:background="@drawable/epicure_button_backgrond2"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="5dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="Phone"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editphoned"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:background="@drawable/epicure_button_backgrond2"
                        android:hint="Phone number"
                        android:inputType="phone" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="5dp">

                    <Button
                        android:id="@+id/editprofileimageupdate"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/epicure_button_backgrond2"
                        android:text="Upload Button" />

                    <ImageView
                        android:id="@+id/updateprofileimage"
                        android:layout_width="45dp"
                        android:layout_height="70dp"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/profileicon" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="Postal Code"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/updatepostalcode"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_weight="2"
                        android:background="@drawable/epicure_button_backgrond2"
                        android:ems="10"
                        android:gravity="start|top"
                        android:hint="postal code"
                        android:inputType="number|textPostalAddress" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="About You"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/updateaboutyou"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_weight="2"
                        android:background="@drawable/epicure_button_backgrond2"
                        android:ems="10"
                        android:gravity="start|top"
                        android:hint="About You"
                        android:inputType="textMultiLine" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="Facebook"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/updatefacebookid"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_weight="2"
                        android:background="@drawable/epicure_button_backgrond2"
                        android:ems="10"
                        android:gravity="start|top"
                        android:hint="facebook Link"
                        android:inputType="textUri|textShortMessage|textEmailAddress" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:text="Instagram"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/updateinstagramid"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_weight="2"
                        android:background="@drawable/epicure_button_backgrond2"
                        android:ems="10"
                        android:gravity="start|top"
                        android:hint="Insta Link"
                        android:inputType="textUri|textMultiLine|textEmailSubject" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/updateprosubmit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/epicure_button_backgrond"
                        android:paddingTop="20dp"
                        android:text="Submit" />
                </TableRow>
            </TableLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>