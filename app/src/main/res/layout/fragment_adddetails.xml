<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="loginviewmodel" type="com.nads.epicureapp.ui.loginui.LoginViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/detailsprogressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/epicure_edit_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background=" #c2c2c8 "
                tools:context=".ui.loginui.AdddetailsFrag">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp">

                    <TextView
                        android:id="@+id/add_detailspage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Add Details"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/adddetails_name_textview"
                        android:layout_width="100dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="30dp"
                        android:paddingStart="10dp"
                        android:text="Username"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/add_details_username"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginRight="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/epicure_edit_bg"
                        android:ems="10"
                        android:hint="UserId"
                        android:inputType="textPersonName"
                        android:paddingStart="10dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingStart="10dp">

                    <TextView
                        android:id="@+id/adddetails_name_text"
                        android:layout_width="100dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="30dp"
                        android:text="Name"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/adddetails_nametext"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginRight="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/epicure_edit_bg"
                        android:ems="10"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:paddingStart="10dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/adddetails_phone_number"
                        android:layout_width="100dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="30dp"
                        android:paddingStart="10dp"
                        android:text="Phone Number"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/add_details_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginRight="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/epicure_edit_bg"
                        android:ems="10"
                        android:hint="Phone Number"
                        android:inputType="phone"
                        android:paddingStart="10dp"
                        app:layout_constraintHorizontal_bias="0.263"
                        app:layout_constraintVertical_bias="0.315" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/add_details_postal"
                        android:layout_width="100dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:paddingStart="10dp"
                        android:text="Postal Address"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/add_details_postal_pinaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="76dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginRight="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/epicure_edit_bg"
                        android:ems="10"
                        android:hint="Postal Address"
                        android:inputType="textPostalAddress"
                        android:paddingStart="10dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingStart="10dp">

                    <TextView
                        android:id="@+id/addetails_address"
                        android:layout_width="100dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:text="Postal Code"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/add_details_postal_address"
                        android:layout_width="wrap_content"
                        android:layout_height="76dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="35dp"
                        android:layout_marginRight="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/epicure_edit_bg"
                        android:ems="10"
                        android:hint="Postal Code"
                        android:inputType="textPostalAddress"
                        android:paddingStart="10dp"
                        app:layout_constraintHorizontal_bias="0.357"
                        app:layout_constraintVertical_bias="0.304" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingLeft="5dp">

                    <Button
                        android:id="@+id/add_details_profile_pic_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/epicure_button_backgrond"
                        android:text="Proflie Picture Upload" />

                    <ImageView
                        android:id="@+id/add_details_profile_pic"
                        android:layout_width="125dp"
                        android:layout_height="103dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="35dp"
                        app:srcCompat="@drawable/profileicon" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingLeft="15dp">

                    <TextView
                        android:id="@+id/adddetails_aboutyou"
                        android:layout_width="100dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:paddingStart="10dp"

                        android:text="About You"
                        android:textStyle="bold"
                        app:layout_constraintHorizontal_bias="0.3"
                        app:layout_constraintStart_toStartOf="@+id/guideline7"
                        app:layout_constraintVertical_bias="0.385" />

                    <EditText
                        android:id="@+id/add_details_about_you"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="35dp"
                        android:layout_marginRight="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/epicure_edit_bg"
                        android:ems="10"
                        android:gravity="start|top"
                        android:hint="About You"
                        android:inputType="textMultiLine"
                        android:paddingStart="10dp"
                        app:layout_constraintHorizontal_bias="0.384"
                        app:layout_constraintVertical_bias="0.387" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:paddingBottom="30dp">

                    <Button
                        android:id="@+id/submit_add_details_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/epicure_button_backgrond"
                        android:paddingBottom="20dp"
                        android:text="Submit" />
                </TableRow>
            </TableLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>